<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:background="#c8d7f8">


    <Button
        android:id="@+id/btnCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#1783c4"
        android:text="CALL"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="51dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <Button
        android:id="@+id/btnSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCall"
        android:layout_marginTop="27dp"
        android:background="#1783c4"
        android:text="SMS"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCall"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <Button
        android:id="@+id/btnWeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSms"
        android:layout_marginTop="27dp"
        android:background="#1783c4"
        android:text="WEB"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSms"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <Button
        android:id="@+id/btnApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnWeb"
        android:layout_marginTop="27dp"
        android:background="#1783c4"
        android:text="APP"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btnWeb"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <Button
        android:id="@+id/btnShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnApp"
        android:layout_marginTop="27dp"
        android:background="#1783c4"
        android:text="SHARE"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btnApp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <Button
        android:id="@+id/btnAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnShare"
        android:layout_marginTop="27dp"
        android:background="#1783c4"
        android:text="ACTION"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btnShare"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>